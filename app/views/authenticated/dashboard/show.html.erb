<h1>Welcome <%= @user.email[/[^@]+/] %>!</h1><br>

<%= button_to "Discover Movies", discover_path %><br><br>

<div class="left">
<h3>Friends</h3><hr>
<% if @friend_list.present? %>
  <% @friend_list.each do |friend| %>
    <p class="in"><%= friend.email %></p>
  <% end %>
<% else %>
  <h5>No Friends Currently</h5><br>
<% end %>

<%= bootstrap_form_with url: friendships_path, method: :post, local: true do |form|  %>
  <%= form.email_field :email, placeholder: "Friend's Email" %>
  <%= form.submit 'Add Friend' %>
<% end %><br><br>

<h3>Viewing Parties</h3><hr><br><br>
</div>

<%= link_to "Log out", '/logout', method: :delete %><br><br>
